{% comment %} To be removed  {% endcomment %}
{%- if current_product -%}
{% default use_placeholder: false %}
  {%- for category in current_product.categories -%}
    {% if category.name contains 'Pipe' or category.name contains 'Pipes' %}
      {% assign use_placeholder = true %}
    {% endif %}
  {%- endfor -%}

  {%- if current_store.zone.id == 'a2s5j000000wm5QAAQ' and use_placeholder == true -%}
    {% assign use_placeholder == true %}
  {%- endif -%}

  {% if use_placeholder == true %}
    <script>
      const placeholderImage = () => {
        const mainImage = document.querySelector('.SC-ProductImages_main img');
        console.log(mainImage);
        if (mainImage != null) {
          mainImage.setAttribute('srcset', '{{ all_media['smoking-cabinet-pipe-placeholder'].image.huge_url }}');
          mainImage.setAttribute('data-src-zoom', '{{ all_media['smoking-cabinet-pipe-placeholder'].image.huge_url }}');
          mainImage.setAttribute('src', '{{ all_media['smoking-cabinet-pipe-placeholder'].image.huge_url }}');
        }
      }
      document.addEventListener('DOMContentLoaded', placeholderImage);
    </script>
  {% endif %}
{%- endif -%}